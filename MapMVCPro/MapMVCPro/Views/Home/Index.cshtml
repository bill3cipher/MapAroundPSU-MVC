@{
    ViewBag.Title = "Home Page";
}


<h2><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>Dormitory</h2>


<div ng-app="myApp" ng-controller="mapController">
    <div class="locations">
        <ul>
            <li ng-repeat="l in locations" ng-click="ShowLocation(l.LocationID)">{{l.Title}}</li>
        </ul>
    </div>
    <div class="maps">
        <!-- Add directive code (gmap directive) for show map and markers-->
        <ui-gmap-google-map center="map.center" zoom="map.zoom">
            <ui-gmap-marker ng-repeat="marker in markers" coords="marker.coords" options="marker.options" events="marker.events" idkey="marker.id">
                <ui-gmap-window options="windowOptions" show="windowOptions.show">
                    <div style="max-width:300px">
                        <div class="header"><strong>{{marker.title}}</strong></div>
                        <div id="mapcontent">
                            <p>

                                <img ng-src="{{marker.image}}" style="width:200px; height:100px" />
                                <div>{{marker.address}}</div> <br>

                                <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>Detail<br>
                                <span class="glyphicon glyphicon-bitcoin" aria-hidden="true"></span>Price: {{marker.price}}฿ / month <br>
                                <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>Phone: {{marker.phone}}<br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Bed: {{marker.bed}} <br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Wardrobe: {{marker.wardrobe}}<br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Conditioner: {{marker.conditioner}}<br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Desk: {{marker.desk}}<br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Toilet: {{marker.toilet}}<br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Refrigrator: {{marker.refrigrator}}<br>
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>Wifi: {{marker.wifi}}<br>
                            </p>
                        </div>
                    </div>
                </ui-gmap-window>
            </ui-gmap-marker>
        </ui-gmap-google-map>
    </div>
</div>

@* Now here we need to some css and js *@
<style>
    .angular-google-map-container {
        height: 700px;
    }

    .angular-google-map {
        width: 100%;
        height: 100%;
        margin: auto 0px;
    }

    .locations {
        width: 200px;
        float: left;
    }

        .locations ul {
            padding: 0px;
            margin: 0px;
            margin-right: 20px;
        }

            .locations ul li {
                list-style-type: none;
                padding: 5px;
                border-bottom: 1px solid #f3f3f3;
                cursor: pointer;
            }
</style>

@section Scripts{
    @* AngularJS library *@
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.6/angular.js"></script>

    @* google map directive js *@
    <script src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.js"></script>
    <script src="//rawgit.com/angular-ui/angular-google-maps/2.0.X/dist/angular-google-maps.js"></script>

    @* here We will add our created js file *@
    <script src="~/Scripts/ngMap.js"></script>
}
